<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Project.Activities.Admin.Sign_up_admin"
    android:layout_margin="@dimen/textSizeNormal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email"
                android:padding="@dimen/textSizeNormal"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/textSizeNormal"
                />

            <EditText
                android:id="@+id/admin_email"
                android:inputType="textPassword"
                android:padding="@dimen/textSizeTitle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/textSizeNormal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:padding="@dimen/textSizeNormal"
                android:layout_height="wrap_content"
                android:text="password"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/textSizeNormal"
                />

            <EditText
                android:id="@+id/admin_password"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:padding="@dimen/textSizeTitle"
                android:layout_height="@dimen/textSizeNormal"
                />

            <Button

                android:id="@+id/sign_in_admin_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Sign In"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:padding="3dip"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryDark"
                android:textSize= "@dimen/textSizeNormal"
                android:visibility="visible"
                >

            </Button>




        </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>