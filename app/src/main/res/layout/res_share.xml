<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="inherit"
    >

    <TextView
        android:id="@+id/compsymb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company Symbol"
        android:padding="@dimen/textSizeNormal"
        android:textSize="@dimen/textSizeNormal"
        android:paddingHorizontal="@dimen/textSizeTitle"
        android:textColor="@color/colorPrimaryDark"/>
    <TextView
        android:id="@+id/sharenumb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number Owned"
        android:padding="@dimen/textSizeNormal"
        android:textSize="@dimen/textSizeNormal"
        android:paddingHorizontal="@dimen/textSizeTitle"
        android:textColor="@color/colorPrimaryDark"/>
    <TextView
        android:id="@+id/mp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Market Price"
        android:padding="@dimen/textSizeNormal"
        android:paddingHorizontal="@dimen/textSizeTitle"
        android:textSize="@dimen/textSizeNormal"
        android:textColor="@color/colorPrimaryDark"/>
</LinearLayout>